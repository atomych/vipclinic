doctype html
html(lang="ru")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name="robots" content="none")
    title VIP CLINIC - Управление/Услуги
    link(rel='stylesheet' href='/css/admin/tabs.css')
    link(rel="stylesheet" href="/css/admin/fonts.css")
    script
  body 
    .tab 
      .tab__content 
          button.add-new Добавить фотографию
          ul.default__list
            each item in promo
              li.default__item 
                img.img(src=item.url)
                p.info(data-order=item.order) Порядковый номер: #{item.order}
                .default__item-control 
                  button.btn.edit Редактировать
                  button.btn.delete Удалить
      .tab-modal 
        .tab-modal__window 
          .tab-modal__content
            .modal__img
              img(src="")
              button.modal__img-btn Изменить 
            .number
              p.text Порядковый номер: 
              input(type="text")
            .modal__control 
              button.save Сохранить
              button.back Отменить
    script(src="/js/admin/tabs/promotions.js")

