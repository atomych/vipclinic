  body
    include modules/header.pug

    .person
      .container 
        .person__inner 
          .person__adaptive
            section.person__adaptive-content
              h2.person__name #{person.content.fullname}
              p.person__def #{person.content.profession}
            .person__line 
          .person__image 
            img(src=person.photo)
          .person__content 
            section.person__main
              h2.person__name #{person.content.fullname}
              p.person__def #{person.content.profession}
            .person__line 
            section.person__block
              h3.person__block-title Образование
              each item in person.content.education 
                p.person__text !{item} 
            section.person__block
              h3.person__block-title Skills
              each item in person.content.skills 
                p.person__text !{item} 

    - const beforeAfterList = beforeAfter;
    include modules/beforeAfter.pug
    
    .person__btn-wrapper
      a.btn.btn--upper(href=person.yclientsLink target="_blank") Записаться онлайн
      
    include modules/footer.pug
    
