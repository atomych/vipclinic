doctype html
html(lang="ru")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name="robots" content="none")
    title VIP CLINIC - Управление/Услуги
    link(rel='stylesheet' href='/css/admin/tabs.css')
    link(rel="stylesheet" href="/css/admin/fonts.css")
    script
  body 
    .tab 
      .tab__content 
          button.add-new Добавить специалиста
          ul.default__list
            each person in persons
              li.default__item(data-id=person.id)
                .person-info
                  img.img.person(src=person.photo)
                  .person-info-text
                    p.name #{person.title}
                    p.prof #{person.content.profession}
                .default__item-control 
                    button.btn.edit Редактировать
                    button.btn.delete(data-id=person.id) Удалить
      .tab-modal 
        .tab-modal__window 
          .tab-modal__content
            .modal__section
              .modal__img.person
                img(src="")
                button.modal__img-btn Изменить 
                input(type="file" accept="image/png, image/jpeg", style="display: none")
              .modal__text
                #firstname(contenteditable="plaintext-only")
                #secondname(contenteditable="plaintext-only")
                #profession(contenteditable="plaintext-only")
            .modal__person-text-section
              h2.person-text__title Образование
              .modal__person-education 
            .modal__person-text-section
              h2.person-text__title Skills
              .modal__person-skills 
            .modal__control 
              p.modal__control-images-not-loaded Изображение не было выбрано
              button.save Сохранить
              button.back Отменить
    script(src="/js/admin/tabs/persons.js")
            

