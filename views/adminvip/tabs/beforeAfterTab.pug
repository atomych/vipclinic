doctype html
html(lang="ru")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name="robots" content="none")
    title VIP CLINIC - Управление/Услуги
    link(rel='stylesheet' href='/css/admin/tabs.css')
    link(rel="stylesheet" href="/css/admin/fonts.css")
    script
  body 
    .tab 
      .tab__content
          button.add-new Добавить фотографию
          ul.default__list
            each item in beforeAfter
              li.default__item 
                .block-info
                  img.img(src=item.url)
                  p.name #{item.text}
                .inlist-wrapper
                  h2.inlist-title Отображается на странице:
                  ul.inlist 
                    if (item.persons.indexOf("main") != -1)
                      li.inlist__item(data-id="main") Главная страница
                    each personID in item.persons
                      if (personID != "main")
                        li.inlist__item(data-id=personID) #{persons.filter((person) => person.id == personID)[0].title}
                .default__item-control 
                  button.btn.edit Редактировать
                  button.btn.delete Удалить
      .tab-modal 
        .tab-modal__window 
          .tab-modal__content
            .modal__img.before-after
              img(src="")
              button.modal__img-btn Изменить 
              input(type="file" accept="image/png, image/jpeg", style="display: none")
            .title.before-after(contenteditable="plaintext-only")
            h2.list-title Отобразить на страницах:
            ul.modal__list
              button.modal__item(data-id="main") Главная страница
              each person in persons
                button.modal__item(data-id=person.id) #{person.title}
            .modal__control 
              button.save Сохранить
              button.back Отменить
    script(src="/js/admin/tabs/beforeAfter.js")


            

